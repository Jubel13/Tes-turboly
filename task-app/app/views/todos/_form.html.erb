<%= form_with(model: todo) do |form| %>
  <% if todo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>
      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :task, style: "display: block", class:"form-label" %>
    <%= form.text_field :task, class:"form-control" %>
  </div>
  <div>
    <%= form.label :due, style: "display: block", class:"form-label mt-3" %>
    <%= form.date_field :due, class:"form-control" %>
  </div>
  <div>
    <%= form.label :priority, style: "display: block", class:"form-label mt-3" %>
    <%= form.select :priority, [["High", "High"], ["Medium", "Medium"], ["Low", "Low"]], class:"form-control" %>
  </div>
  <div>
    <%= form.label :completed, style: "display: block", class:"form-label mt-3" %>
    <%= form.check_box :completed, class:"form-check-input" %>
  </div>
  <div>
    <%= form.number_field :user_id, class:"form-control", value:current_user.id, id: :todo_user_id, type: :hidden %>
  </div>
  <div class="mt-3">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
